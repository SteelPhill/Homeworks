<Window x:Class="NP_HW2_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NP_HW2_Client" 
        xmlns:converters="clr-namespace:NP_HW2_Client.Converters"
        mc:Ignorable="d"
        Title="Client"
        Height="400" 
        Width="350"
        MinHeight="400" 
        MinWidth="350"
        Background="Black"
        Foreground="White"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter" />
        <converters:ListToStringConverter x:Key="ListToStringConverter" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="InfoTextBlock"
                   Grid.Row="0"
                   Height="20"
                   Margin="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="Отсутствует соединение с сервером!" />

        <Button x:Name="StartButton"
                Grid.Row="1"
                Margin="3"
                VerticalAlignment="Center"
                Content="Подключиться к серверу"
                Click="Start_Click" />

        <Button x:Name="StopButton"
                Grid.Row="2"
                Margin="3"
                VerticalAlignment="Center"
                IsEnabled="False"
                Content="Отключиться от сервера"
                Click="Stop_Click" />

        <TextBlock x:Name="ErrorTextBlock"
                   Grid.Row="3"
                   Height="20"
                   Margin="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="Red"
                   FontWeight="Bold" />
        
        <TextBlock Grid.Row="4"
                   Height="20"
                   Margin="3"
                   VerticalAlignment="Center"
                   Text="Введите ингредиенты через запятую:" />

        <TextBox x:Name="RequestTextBox"
                 Grid.Row="5"
                 Height="20"
                 Margin="3"
                 VerticalAlignment="Center" />

        <Button x:Name="SendButton"
                Grid.Row="6"
                Margin="3"
                VerticalAlignment="Center"
                IsEnabled="False"
                Content="Отправить запрос"
                Click="Send_Click" />

        <TextBlock x:Name="ResultTitleTextBlock"
                   Grid.Row="7"
                   Margin="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <ScrollViewer Grid.Row="8"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="White" 
                                BorderThickness="1" 
                                Margin="3" 
                                Padding="5">
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <Image Grid.Column="0"
                                       Width="70" 
                                       Height="70" 
                                       Margin="3"
                                       HorizontalAlignment="Center">
                                    <Image.Source>
                                        <Binding Path="ImageBytes" 
                                                 Converter="{StaticResource ByteArrayToImageConverter}" />
                                    </Image.Source>
                                </Image>

                                <StackPanel Grid.Column="1" 
                                            Margin="5,0,0,0">
                                    <TextBlock FontSize="20"
                                               TextWrapping="Wrap"
                                               Text="{Binding Name}" 
                                               FontWeight="Bold" />
                                    <TextBlock TextWrapping="Wrap"
                                               Text="{Binding Ingredients, Converter={StaticResource ListToStringConverter}}" />
                                </StackPanel>
                            </Grid>
                            
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
    </Grid>
</Window>