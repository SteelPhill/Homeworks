        mc:Ignorable="d"
        Title="Keyboard Trainer"
        Height="350"
        Width="710"
        MinHeight="350"
        MinWidth="710"
        FontSize="25"
        Keyboard.KeyDown="Keyboard_KeyDown"
        Keyboard.KeyUp="Keyboard_KeyUp"
        Keyboard.PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="6"
                    Margin="1"
                    VerticalAlignment="Center">
            <TextBlock FontSize="11"
                       Text="Speed: " />
            <TextBlock x:Name="SpeedTBlock"          
                       FontSize="11"
                       FontWeight="Bold"
                       Text="0" />
            <TextBlock FontSize="11"
                       Text=" chars/min" />
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.Column="8"
                    Grid.ColumnSpan="3"
                    Margin="1"
                    VerticalAlignment="Center">
            <TextBlock FontSize="11"
                       Text="Fails: " />
            <TextBlock x:Name="FailsTBlock"          
                       FontSize="11"
                       FontWeight="Bold"
                       Text="0" />
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.Column="14"
                    Grid.ColumnSpan="8"                    
                    MinWidth="180">
            <TextBlock VerticalAlignment="Center"
                       Margin="1"
                       FontSize="11"                          
                       Text="Difficulty: " />
            <TextBlock x:Name="DifficultyTBlock"    
                       VerticalAlignment="Center"
                       FontSize="11"
                       FontWeight="Bold"
                       Text="0" />
            <Slider x:Name="DifficultySlider" 
                    Margin="5,1,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="120"
                    MinHeight="20"
                    Minimum="1"
                    Maximum="4"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    ValueChanged="Difficulty_ValueChanged" />
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.Column="22"
                    Grid.ColumnSpan="4"
                    Margin="2,0,0,0"
                    VerticalAlignment="Center">
            <CheckBox x:Name="CaseSensitiveCheckBox" />
            <TextBlock FontSize="11"
                       Text=" Case Sensitive" />
        </StackPanel>

        <Button x:Name="Start"
                Grid.Row="1"
                Grid.Column="14"
                Grid.ColumnSpan="8"
                Margin="2"
                VerticalAlignment="Center"
                FontSize="9"
                Content="Start"
                Click="Start_Click" />
        
        <Button x:Name="Stop"
                Grid.Row="1"
                Grid.Column="22"
                Grid.ColumnSpan="8"
                Margin="2"
                VerticalAlignment="Center"
                FontSize="9"
                IsEnabled="False"
                Content="Stop"               
