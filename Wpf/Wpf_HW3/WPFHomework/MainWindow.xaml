                     Grid.Row="2"
                     Grid.Column="0"
                     Grid.RowSpan="2"
                     Grid.ColumnSpan="30"
                     Margin="1"
                     Background="LightBlue" />

        <TextBlock x:Name="PBarTBlock1"
